if tput setaf 1 &> /dev/null; then
	tput sgr0
	if [[ $(tput colors) -ge 256 ]] 2>/dev/null; then
		GIT_BG=$(tput setab 57)
		RED=$(tput setaf 196)
		GREEN=$(tput setaf 10)
		YELLOW=$(tput setaf 220)
		BLUE=$(tput setaf 21)
		MAGENTA=$(tput setaf 201)
		CYAN=$(tput setaf 14)
		WHITE=$(tput setaf 255)
	else
		GIT_BG=$(tput setab 5)
		RED=$(tput setaf 1)
		GREEN=$(tput setaf 2)
		YELLOW=$(tput setaf 3)
		BLUE=$(tput setaf 4)
		MAGENTA=$(tput setaf 5)
		CYAN=$(tput setaf 6)
		WHITE=$(tput setaf 8)
	fi
	BOLD=$(tput bold)
	RESET=$(tput sgr0)
else
	GIT_BG="\033[45m"
	RED="\033[31m"
	GREEN="\033[32m"
	YELLOW="\033[33m"
	BLUE="\033[34m"
	MAGENTA="\033[35m"
	CYAN="\033[36m"
	WHITE="\033[37m"
	BOLD=""
	RESET="\033[m"
fi
